@page "/fluentvalidation"
<h3>Example</h3>
<p>
    This is an example how to use EditForm with Fluent validation (you can read about the package <a href="https://github.com/Blazored/FluentValidation">here</a>)
</p>
<EditForm Model="request" OnValidSubmit="Save">
    <FluentValidationValidator />
    <div class="form-group">
        <label>Name</label>
        <InputText class="form-control" @bind-Value="request.Name"></InputText>
        <ValidationMessage For="() => request.Name"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Age</label>
        <InputNumber class="form-control" @bind-Value="request.Age"></InputNumber>
        <ValidationMessage For="() => request.Age"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Address</label>
        <InputText class="form-control" @bind-Value="request.Address"></InputText>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</EditForm>